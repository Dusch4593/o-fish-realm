{
    "database": "wildaid",
    "collection": "Photo",
    "roles": [
        {
            "name": "Global Admin",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%user.data.email"
                        ],
                        "name": "isGlobalAdmin"
                    }
                }
            },
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "Agency Admin",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%root.agency",
                            "%%user.data.email"
                        ],
                        "name": "isAgencyAdmin"
                    }
                }
            },
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "Agency Member",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%root.agency",
                            "%%user.data.email"
                        ],
                        "name": "isAgencyMember"
                    }
                }
            },
            "read": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        }
    ],
    "schema": {
      "title": "Photo",
  "bsonType": "object",
  "required": [
    "_id",
    "agency",
    "pictureURL",
    "referencingReportID",
    "date"
  ],
  "properties": {
    "_id": {
      "bsonType": "objectId"
    },
    "agency": {
      "bsonType": "string"
    },
    "thumbNail": {
      "bsonType": "binData"
    },
    "picture": {
      "bsonType": "binData"
    },
    "pictureURL": {
      "bsonType": "string"
    },
    "referencingReportID": {
      "bsonType": "string"
    },
    "date": {
      "bsonType": "date"
    }
  }
    }
}
