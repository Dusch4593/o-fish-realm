{
    "database": "wildaid",
    "collection": "Agency",
    "roles": [
        {
            "name": "Global Admin",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%user.data.email"
                        ],
                        "name": "isGlobalAdmin"
                    }
                }
            },
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        }
    ],
    "schema": {
        "title": "Agency",
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "active": {
                "bsonType": "bool"
            },
            "name": {
                "bsonType": "string"
            },
            "description": {
                "bsonType": "string"
            }
        }
    }
}
