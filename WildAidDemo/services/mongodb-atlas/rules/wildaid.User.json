{
    "collection": "User",
    "database": "wildaid",
    "roles": [
        {
            "name": "Global Admin",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%user.data.email"
                        ],
                        "name": "isGlobalAdmin"
                    }
                }
            },
            "fields": {
                "global": {},
                "inBoundPartnerAgencies": {}
            },
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "Agency Admin",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%root.agency.name",
                            "%%user.data.email"
                        ],
                        "name": "isAgencyAdmin"
                    }
                }
            },
            "fields": {
                "global": {},
                "inBoundPartnerAgencies": {
                    "write": true
                }
            },
            "read": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {
                "write": true
            }
        },
        {
            "name": "User",
            "apply_when": {
                "email": "%%user.data.email"
            },
            "fields": {
                "global": {},
                "inBoundPartnerAgencies": {}
            },
            "read": true,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {
                "write": true
            }
        }
    ],
    "schema": {
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "agency": {
                "bsonType": "object",
                "properties": {
                    "admin": {
                        "bsonType": "bool"
                    },
                    "name": {
                        "bsonType": "string"
                    }
                }
            },
            "createdOn": {
                "bsonType": "date"
            },
            "email": {
                "bsonType": "string"
            },
            "global": {
                "bsonType": "object",
                "properties": {
                    "admin": {
                        "bsonType": "bool"
                    }
                }
            },
            "group": {
                "bsonType": "object",
                "properties": {
                    "admin": {
                        "bsonType": "bool"
                    },
                    "name": {
                        "bsonType": "string"
                    }
                }
            },
            "inBoundPartnerAgencies": {
                "bsonType": "array",
                "items": {
                    "bsonType": "string"
                }
            },
            "name": {
                "bsonType": "object",
                "properties": {
                    "first": {
                        "bsonType": "string"
                    },
                    "last": {
                        "bsonType": "string"
                    }
                }
            },
            "profilePic": {
                "bsonType": "string"
            },
            "realmUserID": {
                "bsonType": "string"
            }
        },
        "title": "User"
    }
}
