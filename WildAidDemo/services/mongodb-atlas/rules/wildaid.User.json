{
    "database": "wildaid",
    "collection": "User",
    "roles": [
        {
            "name": "DeleteMe",
            "apply_when": {},
            "fields": {
                "global": {}
            },
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "Global Admin",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%user.data.email"
                        ],
                        "name": "isGlobalAdmin"
                    }
                }
            },
            "fields": {
                "global": {}
            },
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "Agency Admin",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%root.agency",
                            "%%user.data.email"
                        ],
                        "name": "isAgencyAdmin"
                    }
                }
            },
            "fields": {
                "global": {}
            },
            "insert": true,
            "delete": true,
            "additional_fields": {
                "write": true
            }
        }
    ],
    "schema": {
        "title": "User",
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "agency": {
                "bsonType": "object",
                "properties": {
                    "admin": {
                        "bsonType": "bool"
                    },
                    "name": {
                        "bsonType": "string"
                    }
                }
            },
            "createdOn": {
                "bsonType": "date"
            },
            "email": {
                "bsonType": "string"
            },
            "global": {
                "bsonType": "object",
                "properties": {
                    "admin": {
                        "bsonType": "bool"
                    }
                }
            },
            "name": {
                "bsonType": "object",
                "properties": {
                    "first": {
                        "bsonType": "string"
                    },
                    "last": {
                        "bsonType": "string"
                    }
                }
            },
            "profilePic": {
                "bsonType": "binData"
            },
            "realmUserID": {
                "bsonType": "string"
            }
        }
    }
}
